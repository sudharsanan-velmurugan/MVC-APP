@using MVC.Models
@model DepreciationModel

<form method="post" asp-action="Calculate">

    <h2>Depreciation Calculator</h2>

    <div class="row mt-4">
        <div class="col-sm-3">
            Purchase value  :
        </div>
        <div class="col-sm-3">
            <input type="number" asp-for="PurchaseValue" />
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-sm-3">
            Years of service  :
        </div>
        <div class="col-sm-3">
            <input type="number" asp-for="YearsOfService" />
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-sm-3">
            Depreciated Value  :
        </div>
        <div class="col-sm-3">
            <input type="number"  asp-for="DepreciationAmount" />
        </div>
    </div>

    <button class="mt-4 m-lg-4 mb-2 btn btn-primary" type="submit">Calculate</button>

</form>